<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/title_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="?attr/iconColor"
                android:foreground="?attr/selectableItemBackground"
                android:padding="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="Проверка"
                    android:textAlignment="center"
                    android:textColor="?attr/settings_text_color"
                    android:textSize="20sp" />

            </androidx.cardview.widget.CardView>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/editText_wrapper"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_password"
                android:padding="16dp"
                android:textColorHint="?attr/hint_color"
                app:boxStrokeColor="?attr/textColor"
                app:hintTextColor="?attr/textColor">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText_password"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberPassword"
                    android:maxLength="16"
                    android:textColor="?attr/textColor"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/forgot_password"
                android:layout_width="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginVertical="10dp"
                android:elevation="8dp"
                android:text="@string/forgot_password"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:backgroundTint="?attr/toolbarColor" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/word_wrapper"
                android:visibility="gone"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_secret_word"
                android:padding="16dp"
                android:textColorHint="?attr/hint_color"
                app:boxStrokeColor="?attr/textColor"
                app:hintTextColor="?attr/textColor">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText_word"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="16"
                    android:textColor="?attr/textColor"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/apply_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginVertical="10dp"
                android:elevation="8dp"
                android:text="@string/apply"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:backgroundTint="?attr/toolbarColor"
                app:layout_constraintTop_toBottomOf="@id/word_wrapper" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.cardview.widget.CardView>