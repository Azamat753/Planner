<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.timetable.TimetableFragment">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_timetable_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="?attr/windowColor"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_add_task"
        tools:targetApi="lollipop" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/monday"
                layout="@layout/timetable_layout" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/monday_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <include
                android:id="@+id/tuesday"
                layout="@layout/timetable_layout" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tuesday_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <include
                android:id="@+id/wednesday"
                layout="@layout/timetable_layout" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/wednesday_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <include
                android:id="@+id/thursday"
                layout="@layout/timetable_layout" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/thursday_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <include
                android:id="@+id/friday"
                layout="@layout/timetable_layout" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/friday_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <include
                android:id="@+id/saturday"
                layout="@layout/timetable_layout" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/saturday_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <include
                android:id="@+id/sunday"
                layout="@layout/timetable_layout" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/sunday_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.cdev.achievementview.AchievementView
        android:id="@+id/achievement_view"
        custom:collapseStartDelay="3500"
        custom:colorLeft="@color/green_for_achievement"
        custom:colorRight="@color/dark_green_for_achievement"
        custom:drawableLeft="@drawable/trophy"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>