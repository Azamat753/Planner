<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/title_card"
            layout="@layout/title_layout" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/title_wrapper"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="@string/what_to_do"
            android:padding="16dp"
            android:textColorHint="?attr/hint_color"
            app:boxBackgroundColor="?attr/windowColor"
            app:boxCornerRadiusBottomEnd="6dp"
            app:boxCornerRadiusBottomStart="6dp"
            app:boxCornerRadiusTopEnd="6dp"
            app:boxCornerRadiusTopStart="6dp"
            app:boxStrokeColor="?attr/textColor"
            app:boxStrokeWidth="2dp"
            app:hintTextColor="?attr/toolbarColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_card">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/title_editText"
                style="@style/editTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine|textCapSentences" />
        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/dayOfWeek_spinner"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_wrapper" />

        <HorizontalScrollView
            android:id="@+id/days_list"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/title_wrapper"
            android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_dayOfWeek"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/monday_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/monday" />

            <CheckBox
                android:id="@+id/tuesday_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/tuesday" />

            <CheckBox
                android:id="@+id/wednesday_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/wednesday" />

            <CheckBox
                android:id="@+id/thursday_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/thursday" />

            <CheckBox
                android:id="@+id/friday_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/friday" />

            <CheckBox
                android:id="@+id/saturday_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/saturday" />

            <CheckBox
                android:id="@+id/sunday_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/sunday" />

        </LinearLayout>

        </HorizontalScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/start_time_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableEnd="@drawable/ic_time"
            android:drawablePadding="4dp"
            android:elevation="8dp"
            android:text="@string/begins"
            android:textAllCaps="false"
            app:backgroundTint="?attr/toolbarColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/days_list" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/start_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:textColor="?attr/textColor"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/start_time_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/start_time_button"
            app:layout_constraintTop_toTopOf="@id/start_time_button"
            tools:text="12:00" />

        <View
            android:id="@+id/date_line"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="4dp"
            android:background="?attr/toolbarColor"
            app:layout_constraintEnd_toEndOf="@+id/start_time_text"
            app:layout_constraintStart_toStartOf="@id/start_time_text"
            app:layout_constraintTop_toBottomOf="@id/start_time_text" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/end_time_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableEnd="@drawable/ic_time"
            android:drawablePadding="4dp"
            android:elevation="8dp"
            android:text="@string/ends"
            android:textAllCaps="false"
            app:backgroundTint="?attr/toolbarColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/start_time_button" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/end_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:textColor="?attr/textColor"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/end_time_button"
            app:layout_constraintEnd_toEndOf="@+id/start_time_text"
            app:layout_constraintStart_toStartOf="@+id/start_time_text"
            app:layout_constraintTop_toTopOf="@id/end_time_button"
            tools:text="13:00" />

        <View
            android:id="@+id/time_line"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="4dp"
            android:background="?attr/toolbarColor"
            app:layout_constraintEnd_toEndOf="@+id/end_time_text"
            app:layout_constraintStart_toStartOf="@id/end_time_text"
            app:layout_constraintTop_toBottomOf="@id/end_time_text" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/apply_button"
            style="@style/createButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/end_time_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>