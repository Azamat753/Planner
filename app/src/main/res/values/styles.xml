    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:statusBarColor">?attr/toolbarColor</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/iconColor</item>
    </style>

    <style name="ViewStyles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="ImageForTodo">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="TextTitleQuick">
        <item name="android:fontFamily">@font/m_light</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="todoAmountTextColor">
        <item name="android:fontFamily">@font/m_light</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="textDashboard">
        <item name="android:fontFamily">@font/m_light</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="todoTextColor">
        <item name="android:fontFamily">@font/m_light</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="ideaTextColor">
        <item name="android:fontFamily">@font/m_light</item>
        <item name="android:textColor">?attr/iconColor</item>
    </style>

    <style name="CommonFontStyle">
        <item name="android:fontFamily">@font/scope_one</item>
    </style>

    <style name="backgroundApp">
        <item name="background">?attr/toolbarColor</item>
    </style>

    <style name="TextTitleHabit">
        <item name="android:fontFamily">@font/m_medium</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">?attr/iconColor</item>
    </style>

    <style name="createButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:elevation">12dp</item>
        <item name="android:text">@string/create</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="backgroundTint">?attr/toolbarColor</item>
    </style>

    <style name="cardStyle">
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="editTextStyle">
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:maxLength">16</item>
        <item name="android:textColorHint">?attr/hint_color</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="instructionTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:padding">16dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Widget.Planner.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.Planner.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
