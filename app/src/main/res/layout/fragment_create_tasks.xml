<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.tasks.CreateTasksFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolbar_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/white_text_color"
            app:navigationIconTint="?attr/toolbarColor"
            app:subtitleTextColor="?attr/toolbarColor"
            app:title="@string/tasks"
            app:titleTextColor="?attr/toolbarColor" />

    </com.google.android.material.appbar.AppBarLayout>

    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/viewKonfetti"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cr_recycler"
        android:layout_width="match_parent"
        android:layoutAnimation="@anim/item_layout_animation"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/cr_editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_wrapper" />

    <EditText
        android:id="@+id/cr_editText"
        android:layout_width="270dp"
        android:background="@drawable/edit_bg"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:padding="16dp"
        android:inputType="textCapSentences"
        android:textColor="?attr/textColor"
        android:textColorHint="?attr/hint_color"
        android:hint="@string/task"
        app:borderWidth="2dp"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageView
        android:id="@+id/add_task_personal"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cr_editText"
        app:srcCompat="@drawable/ic_done_colored" />

    <com.cdev.achievementview.AchievementView
        android:id="@+id/achievement_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@id/cr_editText"
        android:layout_marginBottom="40dp"
        custom:collapseStartDelay="3500"
        custom:colorLeft="@color/green_for_achievement"
        custom:colorRight="@color/dark_green_for_achievement"
        custom:drawableLeft="@drawable/trophy"/>
</androidx.constraintlayout.widget.ConstraintLayout>